<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/GameFragment">

    <fragment
        android:id="@+id/GameFragment"
        android:name="com.example.s205444_lykkehjulet.GameFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/activity_game">

        <action
            android:id="@+id/action_game_to_winFragment"
            app:destination="@id/WinFragment" />
        <action
            android:id="@+id/action_GameFragment_to_LoseFragment"
            app:destination="@id/LoseFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
    <fragment
        android:id="@+id/WinFragment"
        android:name="com.example.s205444_lykkehjulet.WinFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/win_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/GameFragment" />
    </fragment>

    <fragment
        android:id="@+id/LoseFragment"
        android:name="com.example.s205444_lykkehjulet.LoseFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/lose_fragment">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/GameFragment" />
        <action
            android:id="@+id/action_LoseFragment_to_GameFragment"
            app:destination="@id/GameFragment"
            app:enterAnim="@anim/nav_default_enter_anim" />
    </fragment>
</navigation>